{
	"name": "jolt-extension",
	"displayName": "jolt-extension",
	"description": "Jolt extension for VS Code",
	"version": "1.3.1",
	"publisher": "br93",
	"author": "Bruno Reis",
	"license": "LGPL-3.0-or-later",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/br93/jolt-extension-vs-code.git"
	  },
	  "bugs": {
		"url": "https://github.com/br93/jolt-extension-vs-code.git/issues"
	  },
	  "homepage": "https://github.com/br93/jolt-extension-vs-code",
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.jolt",
				"title": "JOLT (Transform)"
			},
			{
				"command": "openWindow.jolt",
				"title": "JOLT (Create input/spec)"
			},
			{
				"command": "extension.jslt",
				"title": "JSLT (Transform)"
			},
			{
				"command": "openWindow.jslt",
				"title": "JSLT (Create json/jslt)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "webview",
					"title": "Jolt extension for VSCode",
					"icon": "./media/jolt.svg"
				}
			]
		},
		"views": {
			"webview": [
				{
					"type": "webview",
					"id": "jolt-webview",
					"name": "Jolt extension for VSCode",
					"icon": "src/media/jolt.svg"
				}
			]
		},
		"snippets": [
			{
			  "language": "json",
			  "path": "./snippets.json"
			}
		  ]
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/node": "^16.18.34",
		"@types/node-fetch": "^2.6.5",
		"@types/react": "^18.2.27",
		"@types/react-dom": "^18.2.12",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"esbuild": "^0.19.4",
		"eslint": "^8.26.0",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"module-alias": "^2.2.3",
		"node-fetch": "^2.7.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"text-encoding": "^0.7.0"
	}
}